{
  "name": "cinelink-backend",
  "version": "2.0.0",
  "description": "Backend API for CineLink (TMDB + Firebase Auth + Firestore)",
  "main": "src/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" \"test/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "smoke": "node scripts/smoke-api.js"
  },
  "dependencies": {
    "@sentry/node": "^8.47.0",
    "axios": "^1.8.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "express-status-monitor": "^1.3.4",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "redis": "^4.7.0",
    "response-time": "^2.3.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^6.3.4"
  }
}
